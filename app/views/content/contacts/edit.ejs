<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <input type="hidden" name="id" value="<%= contact._id %>" >
                <div class="form-group">
                    <label for="nameTextField">Contact Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Contacts Name"
                    name="name" 
                    value="<%= contact.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="authorTextField"> Contact Number</label>
                    <input type="number" class="form-control"
                    id="authorTextField"
                    placeholder="Enter the Contact Number"
                    name="number" 
                    value="<%= contact.number %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">Email Address</label>
                    <input type="text" class="form-control"
                    id="publishedTextField"
                    placeholder="Enter the Email Address"
                    name="email" 
                    value="<%= contact.email %>"
                    required>
                </div>

               

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/contact-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>